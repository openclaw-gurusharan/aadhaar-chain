# Gateway (Backend) Environment Variables Template
# Copy this file to .env and fill in the values for local development

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
# Local: http://localhost:3000
# Production: https://your-frontend.netlify.app,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string (asyncpg format)
# Local: postgresql+asyncpg://localhost/identity_db
# Production: postgresql+asyncpg://user:pass@host:port/dbname
DATABASE_URL=postgresql+asyncpg://localhost/identity_db

# ============================================================================
# Claude Agent SDK / GLM Configuration
# ============================================================================
# Standard Anthropic API
# ANTHROPIC_API_KEY=sk-ant-xxxxx

# OR use z.ai proxy with GLM 4.7 (recommended for this project)
# ANTHROPIC_AUTH_TOKEN=your-zai-auth-token
# ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic

# Model overrides for GLM 4.7 (when using z.ai proxy)
# ANTHROPIC_DEFAULT_HAIKU_MODEL=glm-4.7
# ANTHROPIC_DEFAULT_SONNET_MODEL=glm-4.7
# ANTHROPIC_DEFAULT_OPUS_MODEL=glm-4.7

# ============================================================================
# Solana Configuration
# ============================================================================
SOLANA_RPC_URL=https://api.devnet.solana.com
IDENTITY_PROGRAM_ID=idcore1111111111111111111111111111111111
CREDENTIAL_PROGRAM_ID=credvault1111111111111111111111111111

# ============================================================================
# API Setu (Aadhaar Verification)
# ============================================================================
# Get credentials from: https://apisetu.com/
APISETU_CLIENT_ID=your-client-id
APISETU_CLIENT_SECRET=your-client-secret
APISETU_ENV=sandbox

# ============================================================================
# Mock Mode (for testing without real API Setu)
# ============================================================================
# Set to true to skip real Aadhaar verification
MOCK_MODE=true

# ============================================================================
# IPFS Configuration
# ============================================================================
IPFS_GATEWAY_URL=https://ipfs.io/ipfs

# ============================================================================
# SSO / Session Configuration
# ============================================================================
# Single switch for local vs production:
# - IS_LOCALHOST=true for local development (localhost:3000, etc.)
# - IS_LOCALHOST=false for production (*.aadharcha.in)
IS_LOCALHOST=true

# Secret key for session tokens (REQUIRED - generate with: openssl rand -hex 32)
SESSION_SECRET=your-random-secret-key-here

# Cookie domain for SSO sessions (only used when IS_LOCALHOST=false)
# Production: .aadharcha.in (note the leading dot for wildcard subdomains)
COOKIE_DOMAIN=.aadharcha.in

# Session duration in days (default: 30)
SESSION_DURATION_DAYS=30

# Allowed origins for CORS and SSO (comma-separated)
# Local development: http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
# Production: https://aadharcha.in,https://flatwatch.aadharcha.in,https://ondcbuyer.aadharcha.in,https://ondcseller.aadharcha.in
SSO_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,https://aadharcha.in,https://flatwatch.aadharcha.in,https://ondcbuyer.aadharcha.in,https://ondcseller.aadharcha.in
